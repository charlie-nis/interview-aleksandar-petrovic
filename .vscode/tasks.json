{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "server",
			"path": "api/",
			"problemMatcher": [],
			"label": "Start express/mongo",
			"detail": "nodemon server.js"
		},
		{
			"type": "npm",
			"script": "start",
			"path": "www/",
			"problemMatcher": [],
			"label": "Launch App",
			"detail": "react-scripts start"
		},
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/api/Dockerfile",
				"context": "${workspaceFolder}/api",
				"pull": true
			},
			"node": {
				"package": "${workspaceFolder}/api/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/api/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				}
			},
			"node": {
				"package": "${workspaceFolder}/api/package.json",
				"enableDebugging": true
			}
		}
	]
}